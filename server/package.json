{
	"name": "easysql-server",
	"description": "Easy SQL implementation of a language server in node.",
	"version": "0.1.0",
	"author": "Easy SQL",
	"engines": {
		"node": "*"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/easysql/vscode-ext.git"
	},
	"dependencies": {
		"vscode-languageserver": "^7.0.0",
		"vscode-languageserver-textdocument": "^1.0.4"
	},
	"devDependencies": {
		"@types/chai": "^4.3.3",
		"@types/expect": "^24.3.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"chai": "^4.3.6",
		"esbuild": "^0.15.13",
		"eslint": "^8.20.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"looks-same": "^8.0.1",
		"mocha": "^10.0.0",
		"nyc": "^15.1.0",
		"prettier": "^2.5.1",
		"ts-mocha": "^10.0.0",
		"typescript": "^4.7.4"
	},
	"scripts": {
		"vscode:prepublish": "rm -r out; npm run esbuild-base -- --minify",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"esbuild-base": "esbuild ./src/server.ts --bundle --outfile=out/server.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"unittest": "ts-mocha -p tsconfig.json src/**/*.spec.ts -w --watch-files 'src/**/*.ts'",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"coverage": "nyc --reporter=lcov --reporter=text-summary ts-mocha -p tsconfig.json src/**/*.spec.ts"
	}
}
