{
	"name": "easysql-server",
	"description": "Easy SQL implementation of a language server in node.",
	"version": "0.1.0",
	"author": "Easy SQL",
	"engines": {
		"node": "*"
	},
	"repository": {
		"type": "git",
        "url": "https://github.com/easysql/vscode-ext.git"
	},
	"dependencies": {
		"vscode-languageserver": "^7.0.0",
		"vscode-languageserver-textdocument": "^1.0.4"
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/server.ts --bundle --outfile=out/server.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
    }
}